<%- include('../layout/headerHTML')-%>
<link rel="stylesheet" type="text/css" href="../../public/css/addProduct.css">

</head>
<body>
    <div class="backButton">
        <a href="/admin/home">
            <button class="btn btn-dark">Back</button>
        </a>
    </div>

<% if(product){%>
    <div class="container mainCont mb-5">
        <h3 class="mb-3 mt-3 text-center" style="font-family: 'Michroma', sans-serif;">Edit Product</h3>
        
        <a href="/admin/deleteProductCompletely?id=<%=product._id%>" class="btn btn-danger ms-auto mb-3"  id="button" >Delete</a>

        <form action="/admin/editProduct?id=<%=product._id%>" class="needs-validation" method="POST" enctype="multipart/form-data">
            
            <div class="form-group">
                <div class="d-grid" style="grid-template-columns: repeat(2, 1fr); column-gap: 10px; row-gap: 10px;">
                    <% product.images.forEach(image => { %>
                        <div class="rounded" style="overflow: hidden; height: 140px; align-items: center; position: relative;">
                            <img src="../../public/productImages/<%= image %>" class="rounded img-thumbnail" style="width: 200px; height: 140px; object-fit: cover;" alt="...">
                            <input type="checkbox" class="form-check-input bg-danger" name="selectedImages" value="<%= image %>" style="position: absolute; top: 5px; left: 5px; width: 25px; height: 25px;" id="flexCheckIndeterminate" onclick="confirmDelete(this)">
                        </div>
                    <% }) %>
                    
                    <script>
                        function confirmDelete(checkbox) {
                            if (checkbox.checked) {
                                var confirmation = confirm("Are you sure you want to delete this image?");
                                if (!confirmation) {
                                    checkbox.checked = false;
                                }
                            }
                        }
                    </script>
                    
                </div>
                <label for="images">Images:</label> <br>
                <small>Max 4 Images!</small> <br>
                <input class="inputFieldImage" type="file" class="form-control-file" id="images" name="images" accept="image/*" multiple >
            </div>
            

            <div class="form-group">
                <label for="name">Product Name:</label> <br>
                <input class="inputField" type="text" class="form-control" id="name" name="name" value="<%=product.name%>" required>
            </div>

            <div class="form-group">
                <label for="price">Price:</label> <br>
                <input class="inputField" type="number" class="form-control" id="price" name="price" value="<%=product.price%>"  required>
            </div>


            <div class="form-group">
                <label for="quantity">Quantity:</label> <br>
                <input class="inputField" type="number" class="form-control" id="quantity" name="quantity" value="<%=product.quantity%>"  required>
            </div>

            <div class="form-group">
                <label for="brand">Brand:</label> <br>
                <select class="form-control" id="brand" name="brand" required>
                    <option value="<%=product.brand%>"><%= product.brand.charAt(0).toUpperCase() + product.brand.slice(1) %></option>
                    <option value="nike">Nike</option>
                    <option value="reebok">Reebok</option>
                    <option value="converse">Converse</option>
                    <option value="jordan">Jordan</option>
                    <option value="asics">Asics</option>
                    <option value="crocs">Crocs</option>
                    <option value="adidas">Adidas</option>
                </select>
            </div>

            <div class="form-group">
                <label for="category">Category:</label> <br>
                <select class="form-control" id="category" name="category" required>
                    <option value="<%=product.category?._id%>"><%=product.category?.name%></option>
                    <% categories.forEach (category=>{%>
                        <option value="<%= category?._id%>"><%= category?.name%></option>
                    <%}) %>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description:</label> <br>
                <textarea class="form-control" id="description" name="description" rows="4" required><%=product.description%></textarea>
            </div>


            <div class="form-group mb-5">
                <label for="sizes">Available Sizes:</label> <br>
                <div class="d-flex" style="justify-content: center;">
                    <% const selectedSizes = product?.sizes %>
                    <% for (let size = 6; size <= 11; size++) { %>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" style="height: 20px; width: 20px;" id="size<%= size %>" name="sizes[]" value="<%= size %>" <% if (selectedSizes.includes(String(size))) { %>checked<% } %>>
                            <label class="form-check-label" for="size<%= size %>"><%= size %></label>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <div class="submitButton">
            <button type="submit" class="btn btn-danger rounded-pill">Update Product</button></div>
        </form>
    </div>
<%}%>
<div class="alertKey">
    <% if(locals.message) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert" style="position: absolute; right: 20px; bottom: 30px;"
        data-bs-autohide="true" data-bs-delay="2000" id="success-alert"> 
        <strong><%= message %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      
      <script>
        // Add this script to your page
        setTimeout(function() {
          document.getElementById('success-alert').style.display = 'none';
        }, 2000); // Adjust the delay (in milliseconds) as needed
      </script>
    <% } %>      
  </div>
  <div class="alertKey">
    <% if(locals.messageS) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: absolute; right: 20px; bottom: 30px;"
        data-bs-autohide="true" data-bs-delay="2000" id="success-alert"> 
        <strong><%= messageS %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  
      <script>
        // Add this script to your page
        setTimeout(function() {
          document.getElementById('success-alert').style.display = 'none';
        }, 2000); // Adjust the delay (in milliseconds) as needed
      </script>
    <% } %>      
  </div>



