<%- include('../layout/headerHTML')-%>
<link rel="stylesheet" type="text/css" href="../../public/css/addProduct.css">
</head>
<body>
    <div class="backButton">
        <a href="/admin/dashBoard">
            <button class="btn btn-dark">Back</button>
        </a>
    </div>
    <div class="container mainCont mb-5">
        <h3 class="mb-5 mt-3 text-center" style="font-family: 'Michroma', sans-serif;">Banner Management</h3>
        <form action="/admin/updateBanner" class="needs-validation" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="d-grid" style="grid-template-columns: repeat(2, 1fr); column-gap: 10px; row-gap: 10px;">
                  <label for="images">Images :</label> <br>
                    <% images?.forEach(image => { %>
                        <div class="rounded" style="overflow: hidden; height: 140px; align-items: center; position: relative;">
                            <img src="<%= image %>" class="rounded img-thumbnail" style="width: 200px; height: 140px; object-fit: cover;" alt="...">
                            <input type="checkbox" class="form-check-input bg-danger" name="selectedImages" value="<%= image %>" style="position: absolute; top: 5px; left: 5px; width: 25px; height: 25px;" id="flexCheckIndeterminate" onclick="confirmDelete(this)">
                        </div>
                    <% }) %>
                    <script>
                        function confirmDelete(checkbox) {
                            if (checkbox.checked) {
                                var confirmation = confirm("Are you sure you want to delete this image?");
                                if (!confirmation) {
                                    checkbox.checked = false;
                                }
                            }
                        }
                    </script>
                </div>
                <label class="mt-3" for="images" >Select Images:</label> <br>
                <small>Max 4 Images!</small> <br>
                <input class="inputFieldImage" type="file" class="form-control-file" id="images" name="images" accept="image/*" multiple >
            </div>
            <div class="submitButton">
            <button type="submit" class="btn btn-dark rounded-pill">Update Banner</button></div>
        </form>
    </div>
<%- include('../layout/alert')-%>
<%- include('../layout/footerHTML')-%>