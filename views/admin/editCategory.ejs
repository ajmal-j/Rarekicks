<%- include('../layout/headerHTML')-%>
<link rel="stylesheet" href="../../public/css/category.css">
</head>
<body>
    <div class="backButton" style="text-decoration: none;">
        <a href="/admin/createCategory">
            <button class="btn btn-dark">Back</button>
        </a>
    </div>
    <main class="container w-50 mt-5">
        <section class="content-main">
            <div class="card p-2 mt-4" style="background-color:  #be6fff; border-radius: 20px; border: 1px solid rgb(40, 40, 40); ">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 ">
                    <h3 class="text-center"  style="font-family: 'Michroma', sans-serif;">Edit Category </h2>
                            <form action="/admin/editCategory?id=<%=categories._id%>" class="needs-validation" method="post">
                                <div class="d-flex justify-content-end">
                                    <a href="/admin/deleteCategoryCompletely?id=<%=categories._id%>" class="btn btn-danger mb-3"  id="button" ><i class="fa-regular fa-trash-can fs-4"></i></a>
                                </div>
                                <div class="">
                                    <label for="product_name" class="form-label"  style="font-family: 'Michroma', sans-serif;">Name</label>
                                    <input name="name" type="text" placeholder="Type here" class="form-control rounded-pill"  value="<%=categories.name%>" id="product_name" /><span class="error-span text-danger" style="font-size: 15px; font-weight: bold;">&nbsp;</span>
                                </div>
                                <div class="">
                                    <label for="discountPercentage" class="form-label"  style="font-family: 'Michroma', sans-serif;">Discount</label>
                                    <input name="discountPercentage" type="number" placeholder="Type here" class="form-control rounded-pill"  value="<%=categories.discountPercentage%>" id="discountPercentage" /><span class="errorSpan text-danger" style="font-size: 15px; font-weight: bold;">&nbsp;</span>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label"  style="font-family: 'Michroma', sans-serif;">Description</label>
                                    <input name="description" type="text" placeholder="Type here" class="form-control"  value="<%=categories.description%>" ></input>
                                </div>
                                <div class="d-flex justify-content-center" >
                                    <button class="btn btn-dark rounded-pill px-5">Save</button>
                                </div>
                            </form>
                        </div>
                        <script>const id="<%=categories._id%>";</script>
                    </div>
                </div>
            </div></div>
        </section>
    </main>
<%- include('../layout/alert')-%>
<script src="../../public/jsFiles/editCategory.js"></script>
<%- include('../layout/footerHTML')-%>