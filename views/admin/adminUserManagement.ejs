<%- include('../layout/headerHTML')-%>
<link rel="stylesheet" type="text/css" href="../../public/css/adminHome.css">

</head>
<body>
    <%- include('../layout/adminHeader')-%>

<div class="container" style="margin-top: 20px; margin-bottom: 200px;"> 
    <h2 class="" style=" font-family: 'Michroma', sans-serif;">Hi Admin!</h2>
        <div class="container-fluid adminContainer">
            <div class="row g-5"> 
                <div class="adminCenter col-12 col-xxl-2 col-xl-2 col-md-12 col-lg-2 col-sm-12">
                  <button class="btn btn-dark rounded">Total Users  : <%=users.length%></button>
                  <a href="/admin/createUser" style="width: 100%; display: flex; align-items: center; justify-content: center; text-decoration: none;"><button class="btn btn-dark rounded  mt-2">Create User</button></a>
                </div>
            </div>
        </div>



        <div class="container mt-5 border rounded p-4">
            <h2 style="font-family: 'Michroma', sans-serif;">Users</h2>

              <div class="d-flex justify-content-center text-center mt-2"> 
                <form action="/admin/searchUser" class="needs-validation" method="get" class=" w-50 mt-2 mb-3" enctype="application/form-data">
                  <div class="input-group mt-3">
                      <span class="input-group-text">
                        <i class="bi bi-search" style="font-size: 20px;"></i>
                      </span>
                      <% if (search) { %>
                      <input type="text" class="form-control w-50" name="search" value="<%= search%>" placeholder="Search User's">
                    <% } else { %>
                      <input type="text" class="form-control w-50" name="search" placeholder="Search User's">
                    <% } %>
                    </div>
                    <div class="mb-4">
                    <button class="btn btn-dark text-center rounded-pill" type="submit" style="width: 100px; margin-top: 10px;">Search</button>
                    <a href="/admin/viewUsers" class="btn btn-danger  rounded-pill text-center" style="width: 100px; margin-top: 10px;">Reset</i></a></div>
                </form>
              </div>
              
            <div class="row row-cols-1 row-cols-xl-3 row-cols-md-2 g-4  d-flex" style="justify-content: center;">
              <% if (users=='') { %>
                <h2 class="text-center">No Users!</h2>
              <% } %>
              
              <% if (users) { %>
     
              <% users.forEach(user=>{%>
   
                <div class="col">
                  <div class="card h-100">
                    <i class="bi bi-person-vcard-fill card-image-top text-center" style="font-size: 100px;"></i>
                    <div class="card-body">
                      <span class="card-title d-block"><span style="font-size: 17px; font-weight: 700;">Name : </span><%= user.name%></span>
                      <span class="card-title d-block"><span style="font-size: 17px; font-weight: 700;">Email : </span><%= user.email%></span>
                      <span class="card-title d-block"><span style="font-size: 17px; font-weight: 700;">Contact : </span><%= user.contact%></span>
                    </div>
                    <div class="card-footer d-flex align-item-center justify-content-center">
                        <a href="/admin/editUser?id=<%=user._id%>" class="btn btn-dark">Edit</a>
                        <a href="/admin/deleteUser?id=<%=user._id%>" class="btn btn-danger ms-3 me-3"  id="button" onclick="handleButtonClick()" >Delete</a>
                        <a href="/admin/blockUser?id=<%=user._id%>" class="btn btn-primary" id="button" onclick="handleButtonClick()" ><%=user.isBlocked?"Unblock":"Block"; %></a>
                      </div>
                    </div>
                  </div>
                  
                  
                  
                  <%})%>
              <% } else { %>
                <h2 class="text-center">No Users</h2>
              <% } %>

              </div> 


        </div>
</div>

<script src="../../public/jsFiles/searchVal.js"></script>


    <%- include('../layout/footer')-%>
<%- include('../layout/footerHTML')-%>