<%- include('../layout/headerHTML')-%>
<link rel="stylesheet" type="text/css" href="../../public/css/userRegister.css">

</head>
<body>
<div class="containerfluid d-flex mainContainer"> 
    <div class="sideForm">
        <form action="/admin/adminLogin" method="POST" class="pt-1 mainForm needs-validation" style="height: 350px;">
            <div class="text-center mb-3 mt-3 mainFontFamily" style="font-size: 30px;">Log In</div>
            <label for="basic-url" class="form-label mb-1 mt-2" style="align-self: flex-start; font-weight: 500;">Email</label>
            <div class="input-group mb-3">
              <span class="input-group-text"><i class="fa-solid fa-at"></i></span>
                <input type="email" class="form-control" placeholder="Enter your email." name="email" value="<%= locals?.email?email:''%>"  required>
            </div> 
            <label for="basic-url" class="form-label mb-1 mt-2" style="align-self: flex-start; font-weight: 500;">Password</label>
            <div class="input-group mb-3">
              <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                <input type="password" class="form-control" placeholder="Enter your password." name="password" required>
            </div> 
            <button type="submit" class="btn btn-dark mt-2">Sign-In</button>
        </form> 
    </div>

<%- include('../layout/alert')-%>

</div>
<script src="../../public/jsFiles/adminLogin.js"></script>
