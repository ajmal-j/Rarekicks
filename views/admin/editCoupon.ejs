<body>
    <%- include('../layout/adminHeader') %>

<main class="container mt-5">
    <section class="content-main">
        <div class="content-header">
            <div style="font-family: 'Michroma', sans-serif;">
                <h2 class="content-title card-title">Edit Coupon</h2>
            </div>
        </div>
