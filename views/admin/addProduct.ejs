<%- include('../layout/headerHTML')-%>
<link rel="stylesheet" type="text/css" href="../../public/css/addProduct.css">
<link rel="stylesheet" type="text/css" href="../../public/css/loader.css">

</head>
<body>
    <%- include('../layout/adminHeader')-%>
    <div class="backButton">
        <a href="/admin/productList">
            <button class="btn btn-dark">Back</button>
        </a>
    </div>
    <div class="container mainCont" >
        <h3 class="mt-3 text-center mb-3" style="font-family: 'Michroma', sans-serif;">Add Product</h3>
        <form action="/admin/addProduct" class="needs-validation" method="POST" enctype="multipart/form-data">
            
            <div class="input-group">
                <span class="input-group-text" style="height: auto !important;">Images:(4)</span>
                <input class="inputFieldImage form-control inputSelect" type="file" class="form-control-file" id="images" name="images" accept="image/*" multiple required>
            </div>

            <div class="input-group">
                <span class="input-group-text">Name  <span class="ms-auto" style="font-weight: 700;">:</span></span>
                <input class="inputField form-control" type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="input-group">
                <span class="input-group-text">Price  <span class="ms-auto" style="font-weight: 700;">:</span></span>
                <input class="inputField form-control" type="number" class="form-control" id="price" name="price" required>
            </div>
            <div class="input-group">
                <span class="input-group-text">Discount %  <span class="ms-auto" style="font-weight: 700;">:</span></span>
                <input class="inputField form-control" type="number" class="form-control" id="discountPercentage" name="discountPercentage" required>
            </div>


            <div class="input-group">
                <span class="input-group-text">Quantity <span class="ms-auto" style="font-weight: 700;">:</span></span>
                <input class="inputField form-control" type="number" class="form-control" id="quantity" name="quantity" required>
            </div>

            <div class="input-group">
                <span class="input-group-text">Brand <span class="ms-auto" style="font-weight: 700;">:</span></span>
                <select class="form-control inputSelect" id="brand" name="brand" required>
                    <option value="nike">Nike</option>
                    <option value="reebok">Reebok</option>
                    <option value="converse">Converse</option>
                    <option value="jordan">Jordan</option>
                    <option value="asics">Asics</option>
                    <option value="crocs">Crocs</option>
                    <option value="adidas">Adidas</option>
                </select>
            </div>

            <div class="input-group">
                <span class="input-group-text">Category <span class="ms-auto" style="font-weight: 700;">:</span></span>
                <select class="form-control inputSelect" id="category" name="category" required>
                    <% categories.forEach (category=>{%>
                        <option value="<%= category._id%>"><%= category.name%></option>
                    <%}) %>
                </select>
            </div>

            <div class="form-control ">
                <label for="description text-center">Description  <span class="ms-auto" style="font-weight: 700;">:</span></label> <br>
                <textarea class="form-control " id="description" name="description" required></textarea>
            </div>
       
            <div class="form-control " >
                <label for="sizes text-center">Available Sizes <span class="ms-auto" style="font-weight: 700;">:</span></label> <br>
                <div class="d-flex" style="justify-content: center;">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" style="height: 20px; width: 20px;" id="sizeSmall" name="sizes[]" value="6">
                    <label class="form-check-label" for="sizeSmall">6</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" style="height: 20px; width: 20px;" id="sizeMedium" name="sizes[]" value="7">
                    <label class="form-check-label" for="sizeMedium">7</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" style="height: 20px; width: 20px;" id="sizeLarge" name="sizes[]" value="8">
                    <label class="form-check-label" for="sizeLarge">8</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" style="height: 20px; width: 20px;" id="sizeLarge" name="sizes[]" value="9">
                    <label class="form-check-label" for="sizeLarge">9</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" style="height: 20px; width: 20px;" id="sizeLarge" name="sizes[]" value="10">
                    <label class="form-check-label" for="sizeLarge">10</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" style="height: 20px; width: 20px;" id="sizeLarge" name="sizes[]" value="11">
                    <label class="form-check-label" for="sizeLarge">11</label>
                </div>
                </div>
            </div>

            <div class="submitButton">
            <button type="submit" class="btn btn-success rounded-pill">Add Product</button></div>
        </form>
    </div>

    <%- include('../layout/alert')-%>

<script src="../../public/jsFiles/addProduct.js"></script>
<%- include('../layout/footer')-%>
<%- include('../layout/footerHTML')-%>